<div class="form-header">
  <div class="top-wrapper">
    <div class="header-left">
      <%= link_to 'Be ambitious', root_path, class: "header-logo" %>
    </div>
      <div class="header-right">
        <ul class="nav">
          <li><%= link_to 'ユーザーログイン', new_user_session_path, class: "sign-in" %></li>
          <li><%= link_to '法人の方ログイン', new_company_session_path, class: "sign-up" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
          <li><%= link_to '法人の方はこちら', new_company_registration_path, class: "company-sign-up" %></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="main" style="background-image:url(/images/Live.png)">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label "ニックネーム" %><br />
          <%= f.text_field :nickname, autofocus: true, class: 'input' %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
        </div>

        <div class="field">
          <%= f.label "パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
        </div>

        <div class="field">
          <%= f.label "電話番号" %><br />
          <%= f.text_field :phone_number, autofocus: true, class: 'input' %>
        </div>

        <div class="field">
          <%= f.label "プロフィール" %><br />
          <%= f.text_area :detail, class: "profile", placeholder: "1000文字まで入力できます", rows:"7" ,maxlength:"1000" %>
        </div>

        <div class="img-upload">
          <div class="click-upload">
          <p>
            画像をアップロードしてください
          </p>
          <%= f.file_field :image, id:"item-image" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "send" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="form-footer">
  <div class="my-name">presented by Sho.</div>
</div>

<%#= render "users/shared/links" %>
