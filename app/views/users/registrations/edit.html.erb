<div class="main" style="background-image:url(/images/concert.png)">
  <div class="user-inner">
    <div class="form__wrapper">
      <h2 class="page-heading">Edit</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label "ニックネーム" %><br />
          <%= f.text_field :nickname, autofocus: true, class: 'input' %>
        </div>

        <div class="field">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "input", class: "input" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
        </div>

        <div class="field">
          <%= f.label "パスワード（確認）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
        </div>

        <div class="field">
          <%= f.label "現在のパスワード" %><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
        </div>

        <div class="field">
          <%= f.label "電話番号" %><br />
          <%= f.text_field :phone_number, autofocus: true, class: 'input' %>
        </div>

        <div class="field">
          <%= f.label "プロフィール" %><br />
          <%= f.text_area :detail, class: "profile", placeholder: "1000文字まで入力できます", rows:"7" ,maxlength:"1000" %>
        </div>

        <div class="img-upload">
          <div class="click-upload">
            <p>
              画像をアップロードしてください
            </p>
            <%= f.file_field :image, id:"item-image" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "send" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="form-footer">
  <div class="my-name">development by Sho.</div>
</div>

<%#= link_to "Back", :back %>
